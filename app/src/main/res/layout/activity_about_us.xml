<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parvez_n_jabed_co.ccc_project.Activities.AboutUsActivity">
    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/commonback"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="160dp"
        android:src="@drawable/cccfinallogo"/>

    <TextView
        android:id="@+id/activityTitle"
        android:layout_below="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:text="সিসিসি অ্যাপ সম্পর্কিত"/>
    <TextView
        android:id="@+id/dotdottxt"
        android:layout_below="@+id/activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:text="----------------------------------------------------------------------"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:weightSum="5"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtiemail"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtisms"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtishare"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtplayiconf"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtiabtus"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="5"
        android:orientation="horizontal">
    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:onClick="onClickEmail"
        android:id="@+id/btnEmailUs"
        android:src="@drawable/abtiemail"
        android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btnMessageUs"
            android:onClick="onClickMessage"
            android:src="@drawable/abtisms"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btnShareUs"
            android:onClick="onClickShare"
            android:src="@drawable/abtishare"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btnPlayStore"
            android:onClick="onClickPlay"
            android:src="@drawable/abtplayiconf"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="onClickAboutUs"
            android:id="@+id/btnAboutUs"
            android:src="@drawable/abtiabtus"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:weightSum="5"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Email Us"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Send sms"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Share"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Play"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="About Us"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="invisible"
        android:src="@drawable/automate"/>

</LinearLayout>
