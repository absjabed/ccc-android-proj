<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_complain_"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/backgroung"
    tools:context="com.parvez_n_jabed_co.ccc_project.Complain_Activity">
    <ImageView
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/commonback"/>
    <TextView
        android:id="@+id/activityTitle"
        android:layout_below="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:text="অভিযোগ ও পরামর্শ"/>
    <TextView
        android:id="@+id/dotdottxt"
        android:layout_below="@+id/activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:text="----------------------------------------------------------------------"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="8"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Spinner
                android:layout_width="fill_parent"
                android:spinnerMode="dropdown"
                android:background="#50FFFFFF"
                android:textStyle="bold"
                android:id="@+id/complaintype"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/complainedit"
                android:background="#30000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:inputType="textMultiLine"
                android:text="সমস্যা উল্লেখ করুন"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ff0"
                android:textSize="15dp"
                android:text="নিচের লোকেশন বাটন টি প্রেস করে চাইলে আপনার অভিযোগের লোকেশন যুক্ত করতে পারবেন।"/>
            <ImageButton
                android:paddingTop="30dp"
                android:paddingBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/complainlocation"
                android:layout_width="70dp"
                android:background="@drawable/location"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#30000000"
                android:textSize="15dp"
                android:id="@+id/ETEmailPhone"
                android:textStyle="bold"
                android:text="ইমেইল/মোবাইল নাম্বার" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:text="অভিযোগ জমা দিন"
                android:id="@+id/submitcomplain"
                android:textSize="20dp"
                android:onClick="onClickComplainSubmit"
                android:background="@drawable/btnbackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>






</LinearLayout>
