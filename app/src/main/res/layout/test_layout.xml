<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_commuwith_meyor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/cccfinalback"
    tools:context="com.parvez_n_jabed_co.ccc_project.Activities.ComplainActivityNew">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/topHeader"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:src="@drawable/commonback"/>
        <TextView
            android:id="@+id/activityTitle"
            android:layout_below="@+id/topHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:text="আপনার অভিযোগ জমা দিন"/>
        <TextView
            android:id="@+id/dotdottxt"
            android:layout_below="@+id/activityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:text="----------------------------------------------------------------------"/>
        <com.beardedhen.androidbootstrap.BootstrapLabel
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            app:bootstrapBrand="primary"
            app:bootstrapHeading="h6"
            android:textStyle="bold"
            android:text="অভিযোগের যথাযথ বিবরন আবশ্যক। চাইলে অভিযোগের সাথে ছবি অথবা ভিডিও যুক্ত করতে পারেন। ছবি অথবা ভিডিও এর আকার সর্বোচ্চ ১০~১৫ মেগাবাইটের বেশী হওয়া উচিৎ নয়।"
            android:gravity="center_horizontal"/>
        <com.beardedhen.androidbootstrap.BootstrapLabel
            app:bootstrapBrand="success"
            app:bootstrapHeading="h6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:labelFor="@+id/complaintype"
            android:gravity="center"
            android:textStyle="bold"
            android:text="অভিযোগের ধরন নির্বাচন করুনঃ"/>
        <Spinner
            android:layout_width="match_parent"
            android:spinnerMode="dropdown"
            android:layout_margin="5dp"
            android:background="#428bca"
            android:textStyle="bold"
            android:id="@+id/complainReportType"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_height="45dp" />
        <!--        <com.beardedhen.androidbootstrap.BootstrapDropDown
                    android:id="@+id/complain_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    app:bootstrapBrand="secondary"
                    app:bootstrapExpandDirection="down"
                    app:bootstrapSize="lg"
                    app:bootstrapText="অভিযোগের ধরন নির্বাচন করুন"
                    app:dropdownResource="@array/bootstrap_dropdown_example_data"
                    app:roundedCorners="true"
                    />-->
        <com.beardedhen.androidbootstrap.BootstrapLabel
            app:bootstrapBrand="success"
            app:bootstrapHeading="h6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:labelFor="@+id/ETReportdescription"
            android:gravity="center"
            android:textStyle="bold"
            android:text="অভিযোগের বিস্তারিত (ঠিকানা ও ওয়ার্ড নং সহ)ঃ"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            android:id="@+id/ETReportdescription"
            android:paddingLeft="3dp"
            android:maxLength="500"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            app:bootstrapBrand="success"
            app:bootstrapHeading="h6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:labelFor="@+id/ETReportname"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="আপনার নামঃ"/>

        <com.beardedhen.androidbootstrap.BootstrapEditText
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            android:id="@+id/ETReportname"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <com.beardedhen.androidbootstrap.BootstrapLabel
            app:bootstrapBrand="success"
            app:bootstrapHeading="h6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:labelFor="@+id/ETReportphoneemail"
            android:gravity="center"
            android:textStyle="bold"
            android:text="সঠিক মোবাইল নং / ই-মেইল ঠিকানাঃ"/>
        <com.beardedhen.androidbootstrap.BootstrapEditText
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            android:id="@+id/ETReportphoneemail"
            android:textColor="#000000"
            android:inputType="text"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:visibility="gone"
            android:id="@+id/chkboxAttachment"
            android:background="#000000"
            android:text="ছবি বা ভিডিও সংযুক্ত করতে চান?"/>
        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/chkboxAttachmentB"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:bootstrapBrand="danger"
            android:textStyle="bold"
            app:roundedCorners="true"
            android:text="ছবি বা ভিডিও সংযুক্ত করতে এখানে ক্লিক করুন \n সংযুক্ত করতে না চাইলে আবার ক্লিক করুন। "
            app:buttonMode="checkbox"/>
        <com.beardedhen.androidbootstrap.BootstrapLabel
            app:bootstrapBrand="success"
            android:id="@+id/attachmentLabel"
            android:visibility="gone"
            app:bootstrapHeading="h6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:labelFor="@+id/ETReportphoneemail"
            android:gravity="center"
            android:textStyle="bold"
            android:text="অভিযোগের সাথে ছবি অথবা ভিডিও যুক্ত করুনঃ"/>
        <LinearLayout
            android:id="@+id/attachmentLayout"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <com.beardedhen.androidbootstrap.BootstrapButton
                app:bootstrapBrand="danger"
                app:roundedCorners="true"
                android:id="@+id/btnAddPic"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:onClick="onClickAddPic"
                android:layout_height="match_parent"
                android:text="ছবি যুক্ত করুন"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"/>

            <com.beardedhen.androidbootstrap.BootstrapButton
                app:bootstrapBrand="danger"
                app:roundedCorners="true"
                android:textStyle="bold"
                android:id="@+id/btnAddVideo"
                android:layout_weight="1"
                android:onClick="onClickAddVideo"
                android:layout_width="0dp"
                android:textAllCaps="true"
                android:layout_height="match_parent"
                android:text="ভিডিও যুক্ত করুন"/>
        </LinearLayout>

        <com.beardedhen.androidbootstrap.BootstrapButton
            app:bootstrapBrand="primary"
            app:roundedCorners="true"
            android:id="@+id/submitReportForm"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:onClick="submitReportToCCC"
            android:layout_height="45dp"
            android:text="অভিযোগ জমা দিন"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>