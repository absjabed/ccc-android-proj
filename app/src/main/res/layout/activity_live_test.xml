<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_other_various_forms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/backgroung"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parvez_n_jabed_co.ccc_project.TestActivities.LiveTestActivity">
    <ImageView
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/commonback"/>
    <TextView
        android:id="@+id/activityTitle"
        android:layout_below="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal"
        android:text="চ/সি/ক হতে সরাসরি সম্প্রচার দেখুন"/>
    <TextView
        android:id="@+id/dotdottxt"
        android:layout_below="@+id/activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:text="----------------------------------------------------------------------"/>
<LinearLayout
    android:layout_below="@id/dotdottxt"
    android:layout_width="match_parent"
    android:weightSum="5"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="লাইভ স্ট্রিমিং দেখার জন্যে লিঙ্ক আপনার লোকাল ওয়াই-ফাই এর ঠিকানার পর পোর্ট নাম্বার হিসেবে :8080 যুক্ত করতে হবে।\nউদাহরনঃ http://192.168.11.11:8080\nএখানে http://192.168.11.11 এর পরিবর্তে আপনার লোকাল ওয়াই-ফাই ঠিকানা যুক্ত করুন।\nএবং প্রদত্ত বাটনে ক্লিক করুন।
"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="লাইভ স্ট্রিম লিঙ্কঃ  "/>
        <EditText
            android:id="@+id/liveLinkET"
            android:layout_width="match_parent"
            android:text="http://192.168.111.11:8080"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="0dp">
        <Button
            android:id="@+id/liveBtn"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:onClick="liveActivity"
            android:background="@drawable/btnbackground"
            android:text="সরাসরি সম্প্রচার দেখুন (আইপি)"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:id="@+id/liveBtnAnother"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClickLiveAnotherButton"
            android:layout_margin="10dp"
            android:background="@drawable/btnbackground"
            android:text="সরাসরি সম্প্রচার দেখুন (বিকল্প)"
            />

    </LinearLayout>



</LinearLayout>



</RelativeLayout>